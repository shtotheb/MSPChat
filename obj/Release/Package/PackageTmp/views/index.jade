extends layout

block content
  .wrap
    .navbar.navbar-default(role='navigation')
        .container-fluid
          .navbar-header
            a.navbar-brand(href='#') Node Chatroom
    #messages

        .push
  .footer
    .container-fluid
      .row
        .col-xs-8.col-sm-2
          input(type="text" id="username-box" class="form-control input-lg" placeholder="Your Username" rows="3")
